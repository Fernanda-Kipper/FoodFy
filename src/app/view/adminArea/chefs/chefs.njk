{% extends "adminArea/layoutAdm.njk" %}

{% block title %}
  <title>Foodfy - Chefs</title>
{% endblock %}

{% block content %}
  <section class='receitas'>
    <h1>Gerenciar chefs</h1>
    <div class="chef_list">
      {% for chef in chefs %}
        <div class="cards" id="{{ chef.id }}">
          <img src="/img/{{ chef.avatar_url }}" alt="{{ chef.name }}">
          <div class="info">
            <h2>{{ chef.name }}</h2>
            <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock %}