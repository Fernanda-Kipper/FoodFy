<div class="item">
  <span>Título da receita</span>
  <input type="text" name="title" value="{{ recipe.title }}">
</div>

<div class="item">
  <span>Chef</span>
  <select name="chef_id" id="" placeholder="Selecione um chef">
    <option value="" disable selected class="unselected"> Selecione um chef </option>
    {% for chef in chefs %}
      <option value="{{ chef.id }}" {% if (recipe.chef_id == chef.id) %}selected{% endif %}>
        {{ chef.name }}
      </option>
    {% endfor %}
  </select>
</div>

<div class="item">
  <span>Imagem da receita</span>
  <input type="text" name="image" placeholder="" value="{{ recipe.image }}">
</div>

<div class="item">
  <div id="ingredients">
    <span>Ingredientes</span>
    {% if (recipe.ingredients == null) %}
      <div class="ingredient">
        <input type="text" name="ingredients[]" value="">
      </div>
    {% endif %}
    {% for ingredient in recipe.ingredients %}    
      <div class="ingredient">
        <input type="text" name="ingredients[]" value="{{ ingredient }}">
      </div>
    {% endfor %}
  </div>
  <span class="new add-ingredient">Adicionar novo ingrediente</span>
</div>

<div class="item">
  <div id="steps">
    <span>Modo de preapro</span>
    {% if (recipe.preparation == null) %}
      <div class="step">    
        <input type="text" name="preparation[]" value="">
      </div>
    {% endif %}
    {% for step in recipe.preparation %}
      <div class="step">    
        <input type="text" name="preparation[]" value="{{ step }}">
      </div>
    {% endfor %}
  </div>
  <span class="new add-step">Adicionar novo passo</span>
</div>

<div class="item">
  <span>Informações adicionais</span>
  <textarea name="information">{{ recipe.information }}</textarea>
</div>